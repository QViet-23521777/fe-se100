# Frontend environment variables

# Base URL for the backend API (game-store-api)
# Example: http://localhost:3001
NEXT_PUBLIC_GAME_STORE_API_BASE_URL=http://localhost:3001

# Optional: hint for random Steam app sampling (defaults to 85000)
# STEAM_APPS_MAX_SKIP=85000

# Optional: refund request window in days (UI hint; backend defaults to 7 via REFUND_WINDOW_DAYS)
# NEXT_PUBLIC_REFUND_WINDOW_DAYS=7

# Optional: enable dev seed buttons/endpoints
# Requires backend ALLOW_DEV_SEED=true
NEXT_PUBLIC_ALLOW_DEV_SEED=false
